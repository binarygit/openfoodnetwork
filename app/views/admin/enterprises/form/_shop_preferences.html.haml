.row
  .text-normal
    = t('.display_ordering_in_shopfront')
    %br
    = t('.shopfront_category_ordering_note')
.row
  .three.columns.alpha
    = radio_button :enterprise, :preferred_shopfront_product_sorting_method, :by_category 
    = label :enterprise, :preferred_shopfront_product_sorting_method_by_category, t('.shopfront_sort_by_category')
  .eight.columns.omega
    %textarea.fullwidth{ id: 'enterprise_preferred_shopfront_taxon_order', name: 'enterprise[preferred_shopfront_taxon_order]', rows: 6,
      'ofn-taxon-autocomplete' => '', 'multiple-selection' => 'true', placeholder: t('.shopfront_sort_by_category_placeholder'),
      ng: { model: 'Enterprise.preferred_shopfront_taxon_order', readonly: "Enterprise.preferred_shopfront_product_sorting_method != 'by_category'" }}
.row
  .three.columns.alpha
    = radio_button :enterprise, :preferred_shopfront_product_sorting_method, :by_producer
    = label :enterprise, :preferred_shopfront_product_sorting_method_by_producer, t('.shopfront_sort_by_producer')
  .eight.columns.omega
    %textarea.fullwidth{ id: 'enterprise_preferred_shopfront_producer_order', name: 'enterprise[preferred_shopfront_producer_order]', rows: 6,
      'ofn-producer-autocomplete' => '', 'multiple-selection' => 'true', placeholder: t('.shopfront_sort_by_producer_placeholder'),
      ng: { model: 'Enterprise.preferred_shopfront_producer_order', readonly: "Enterprise.preferred_shopfront_product_sorting_method != 'by_producer'" }}

.row
  .three.columns.alpha
    = f.label "enterprise_preferred_shopfront_order_cycle_order", t(:sort_order_cycles_on_shopfront_by)
  .three.columns
    = radio_button :enterprise, :preferred_shopfront_order_cycle_order, :orders_open_at
    = label :enterprise, :preferred_shopfront_order_cycle_order_orders_open_at, t('.open_date')
  .five.columns.omega
    = radio_button :enterprise, :preferred_shopfront_order_cycle_order, :orders_close_at
    = label :enterprise, :preferred_shopfront_order_cycle_order_orders_close_at, t('.close_date')

%div{ 'data-controller': 'guest-orders', 'data-guest-orders-allow-guest-orders-value': @enterprise.allow_guest_orders }
  .row
    .three.columns.alpha
      %label= t '.shopfront_requires_login'
      = render partial: 'admin/shared/tooltip', locals: {tooltip_text: t('.shopfront_requires_login_tip')}
    .three.columns
      = f.radio_button :require_login, false, 'data-action': 'change->guest-orders#toggleRow'
      = f.label :require_login, t('.shopfront_requires_login_false'), value: :false
    .five.columns.omega
      = f.radio_button :require_login, true, 'data-action': 'change->guest-orders#toggleRow', 'data-guest-orders-target': 'shopFrontVisible'
      = f.label :require_login, t('.shopfront_requires_login_true'), value: :true
  
  = render partial: 'admin/enterprises/form/guest_orders_row', locals: { enterprise: @enterprise }
  
  .row
    .three.columns.alpha
      %label= t '.display_remaining_stock'
      = render partial: 'admin/shared/tooltip', locals: {tooltip_text: t('.display_remaining_stock_tip')}
    .three.columns
      = f.radio_button :preferred_product_low_stock_display, true
      = f.label :preferred_product_low_stock_display, t('.enabled'), value: :true
    .five.columns.omega
      = f.radio_button :preferred_product_low_stock_display, false
      = f.label :preferred_product_low_stock_display, t('.disabled'), value: :false
  
  .row
    .three.columns.alpha
      %label= t '.allow_order_changes'
      = render partial: 'admin/shared/tooltip', locals: {tooltip_text: t('.allow_order_changer_tip')}
    .three.columns
      = f.radio_button :allow_order_changes, false, 'data-action': 'change->guest-orders#toggleRow'
      = f.label :allow_order_changes, t('.allow_order_changes_false'), value: :false
    .five.columns.omega
      = f.radio_button :allow_order_changes, true, 'data-action': 'change->guest-orders#toggleRow', 'data-guest-orders-target': 'allowToChangeOrders'
      = f.label :allow_order_changes, t('.allow_order_changes_true'), value: :true


.row
